{
  "name": "electron-labelpilot",
  "private": true,
  "version": "1.0.4",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "electron:build": "tsc -p tsconfig.electron.json",
    "electron:dev": "concurrently -k \"vite\" \"tsc -p tsconfig.electron.json -w\" \"set ELECTRON_RUN_AS_NODE=&& electron .\"",
    "electron:dev:lowmem": "concurrently -k \"vite\" \"tsc -p tsconfig.electron.json -w\" \"set DISABLE_GPU=true&& set ELECTRON_RUN_AS_NODE=&& electron .\"",
    "electron:dist": "npm run build && npm run electron:build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.labelpilot.electron",
    "productName": "LabelPilot",
    "directories": {
      "output": "dist-build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "HFedorovskyi",
        "repo": "electron-labelpilot"
      }
    ],
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "extraResources": [
      {
        "from": "resources/printer",
        "to": "printer",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/fonts",
        "to": "fonts",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.93",
    "@types/bwip-js": "^3.2.3",
    "axios": "^1.13.4",
    "better-sqlite3": "^12.6.2",
    "bonjour-service": "^1.3.0",
    "bwip-js": "^4.8.0",
    "clsx": "^2.1.1",
    "electron-log": "^5.4.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.8.3",
    "jsbarcode": "^3.12.3",
    "lucide-react": "^0.563.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "serialport": "^13.0.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "electron": "^28.3.3",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}